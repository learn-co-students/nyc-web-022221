<h1>New Review</h1>

<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user_snack do |f| %>
  <%= f.label :review %>
  <%= f.text_field :review %>

  <%= f.label :rating %>
  <%= f.number_field :rating %>

  <%= f.label :user_id %>
  <%= f.collection_select :user_id, @users, :id, :name  %>

  <%= f.label :snack_id %>
  <%= f.collection_select :snack_id, @snacks, :id, :name %>
  

  <%= f.submit %>

<% end %>

